<div class="row">
<div class="col-md-6 col-md-offset-3">
<center><h2>Send new message</h2></center>
<hr>
<%= form_for :message, url: {action: 'send_message'} do |f| %>
<div class="form-group">
  <%= f.label :email_to, 'Email to:' %><br/>
  <%= f.text_field :email_to, :class=>'form-control',:placeholder=>'Enter your friends email' %><br/>
</div>
<div class="form-group">
  <%= f.label :email_subject, 'Message subject' %><br/>
  <%= f.text_field :email_subject, :class=>'form-control',:placeholder=>'Enter message subject' %>
  </div>
  <div class="form-group">
  <%= f.label :email_text, 'Message' %><br/>
  <%= f.text_area :email_text, :class=>'form-control',:placeholder=>'Enter message'%>
</div>
  <%= f.submit 'Send message', :class=>'btn btn-success' %>
  <a href="/messages/inbox" class="btn btn-danger">Cancel</a>
<% end %>
</div>
</div>
<br>
